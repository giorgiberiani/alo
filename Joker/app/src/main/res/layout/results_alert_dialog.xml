<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:maxLines="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000"
            android:background="@drawable/textviews_border"
            android:layout_weight="1"
            android:id="@+id/reslt_name_0"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:maxLines="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000"
            android:background="@drawable/textviews_border"
            android:layout_weight="1"
            android:id="@+id/reslt_name_1"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:maxLines="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000"
            android:background="@drawable/textviews_border"
            android:layout_weight="1"
            android:id="@+id/reslt_name_2"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:maxLines="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000"
            android:background="@drawable/textviews_border"
            android:layout_weight="1"
            android:id="@+id/reslt_name_3"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:background="@drawable/histroy_button"
            android:text="@string/back_to_mainactyvity"
            android:id="@+id/button_back_to_mainactivity"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:maxLines="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000"
            android:background="@drawable/textviews_border"
            android:layout_weight="1"
            android:id="@+id/reslt_value_0"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:maxLines="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000"
            android:background="@drawable/textviews_border"
            android:layout_weight="1"
            android:id="@+id/reslt_value_1"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:maxLines="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000"
            android:background="@drawable/textviews_border"
            android:layout_weight="1"
            android:id="@+id/reslt_value_2"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <TextView
            android:maxLines="1"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#000"
            android:background="@drawable/textviews_border"
            android:layout_weight="1"
            android:id="@+id/reslt_value_3"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
        <Button
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:background="@drawable/histroy_button"
            android:text="@string/save"
            android:id="@+id/button_save_results"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </LinearLayout>


</LinearLayout>